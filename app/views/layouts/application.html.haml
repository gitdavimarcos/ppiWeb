%html
  %head
    %meta{:charset => "utf-8"}
    %title= yield(:title) 
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div{ :class => "shadow" }
      %div{ :class => "conecta" }

        %header{ :class => "header" }
          = render 'layouts/navigation'
        
        %main{ :class => "main", :role =>"main"}
          = yield
          %footer{ :class => "foot" }
            = render 'layouts/messages'


